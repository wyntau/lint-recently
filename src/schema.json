{
  "$schema": "http://json-schema.org/draft-07/schema",
  "$id": "configSchema",
  "title": "lint-recently config",
  "type": "object",
  "properties": {
    "days": {
      "description": "we will use `git diff` between the latest commit and ${days} days ago's commit to find all modified files. Default to 3.",
      "type": "integer",
      "minimum": 1
    },
    "patterns": {
      "description": "patterns should be an object where each value is a command to run and its key is a glob pattern to use for this command",
      "type": "object",
      "additionalProperties": {
        "oneOf": [
          {
            "type": "string"
          },
          {
            "type": "array",
            "items": {
              "type": "string"
            }
          }
        ]
      }
    },
    "strategy": {
      "description": "strategy to find recently modified files",
      "oneOf": [
        {
          "type": "object",
          "properties": {
            "type": {
              "type": "string",
              "const": "days"
            },
            "option": {
              "description": "we will use `git diff` between the latest commit and ${days} days ago's commit to find all modified files. Default to 3.",
              "type": "integer",
              "minimum": 1
            }
          },
          "required": ["type", "option"]
        },
        {
          "type": "object",
          "properties": {
            "type": {
              "type": "string",
              "const": "commits"
            },
            "option": {
              "description": "recent commit counts",
              "type": "integer",
              "minimum": 1
            }
          },
          "required": ["type", "option"]
        },
        {
          "type": "object",
          "properties": {
            "type": {
              "type": "string",
              "const": "branch"
            },
            "option": {
              "description": "base branch to diff",
              "type": "string"
            }
          },
          "required": ["type", "option"]
        }
      ]
    }
  },
  "required": ["patterns"]
}
