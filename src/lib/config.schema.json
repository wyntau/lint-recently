{
  "$schema": "http://json-schema.org/draft-07/schema",
  "$id": "configSchema",
  "title": "lint-recently config",
  "type": "object",
  "properties": {
    "days": {
      "type": "number",
      "minimum": 1
    },
    "patterns": {
      "type": "object",
      "additionalProperties": {
        "oneOf": [
          {
            "type": "string"
          },
          {
            "type": "array",
            "items": [
              {
                "type": "string"
              }
            ]
          }
        ]
      }
    }
  },
  "required": ["patterns"]
}
